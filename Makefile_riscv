PREFIX=~/riscv-linux32/bin/riscv32-unknown-linux-gnu-
ARGS = -fno-rtti -fno-exceptions -march=rv32im -mabi=ilp32 -Os -g -mno-div -ffunction-sections
# ARGS = -fno-rtti -fno-exceptions -march=rv64imac -mabi=lp64  -O3 -g

ARGS += -DMACHINE_MODE -fno-builtin

.SECONDARY:

all: shared.a

shared.a: common.o crc32.o inter_process.o uart.o vectors_risc.o misc_asm_risc.o spi.o sdcard_spi.o
	$(PREFIX)ar rc $@ $^

clean:
	rm -f *.bin *.o *.elf *.a

%.bin: %.elf
	$(PREFIX)objcopy -O binary $^ $@

%.o: %.cpp $(HEADERS) Makefile_riscv
	$(PREFIX)c++ $< -c -o $@ -g -std=c++14 -Wall $(ARGS)

%.o: %.S
	$(PREFIX)c++ $< -c -o $@ -g

%.elf: %.o
	$(PREFIX)c++ $^ -o $@ -g -std=c++14 -Wall $(ARGS) -nostartfiles
